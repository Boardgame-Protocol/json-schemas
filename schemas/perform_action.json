{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://boardgame-protocol.github.io/json-schemas/schemas/perform_action.json",
  "type": "object",
  "required": [
    "version",
    "type",
    "game",
    "match_id",
    "agent_id",
    "action"
  ],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "type": {
      "type": "string",
      "const": "perform_action"
    },
    "game": {
      "type": "string"
    },
    "match_id": {
      "type": "string"
    },
    "agent_id": {
      "type": "string"
    },
    "action": {
      "type": "object",
      "required": ["version", "type", "data"],
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "type": {
          "type": "string"
        },
        "data": {
          "type": "object"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}